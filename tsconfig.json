{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "lib": ["es6", "dom"],
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"],
}